    const loader=document.getElementById('loadingScreen');
    window.addEventListener('load',()=>{
      setTimeout(()=>loader.style.opacity=0,600);
      setTimeout(()=>loader.style.display='none',1200);
    });
    const observer=new IntersectionObserver(entries=>{
      entries.forEach(entry=>{ if(entry.isIntersecting) entry.target.classList.add('visible'); });
    },{threshold:0.2});
    document.querySelectorAll('.hidden').forEach(el=>observer.observe(el));
    const tabButtons=document.querySelectorAll('.tab-button');
    const tabPanels=document.querySelectorAll('.tab-panel');
    tabButtons.forEach(button=>{
      button.addEventListener('click',()=>{
        const target=button.getAttribute('data-tab');
        tabButtons.forEach(btn=>btn.classList.toggle('active', btn===button));
        tabPanels.forEach(panel=>panel.classList.toggle('active', panel.id===`tab-${target}`));
      });
    });
    const collapsibleHeader=document.querySelector('.collapsible-header');
    if(collapsibleHeader){
      const arrow=collapsibleHeader.querySelector('.collapsible-arrow');
      const collapsibleContent=collapsibleHeader.nextElementSibling;
      collapsibleHeader.addEventListener('click',()=>{
        collapsibleContent.classList.toggle('open');
        arrow.classList.toggle('open');
      });
    }
  </script>
